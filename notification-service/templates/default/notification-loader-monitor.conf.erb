# upstart-respawn-monitor.conf

description "Notify root about ushare respawn limit reached"
author "Roman Yepishev <rtg@rtg.in.ua>"

# This is a short-lived job
task

start on stopped notification-loader PROCESS=respawn

script
    echo "notification-loader reached respawn limit" | mail -s "notification-loader crashed" notifications@rammount.com
end script
