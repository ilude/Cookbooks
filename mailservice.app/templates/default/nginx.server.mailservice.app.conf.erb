
    location /mailservice {
      access_log  <%= @node[:nginx][:log_dir] %>/access.mailservice.log;
      root /app/mailservice.app/public;
      try_files $uri @mailservice;
    }

    location @mailservice {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect off;

      # pass to the upstream unicorn server mentioned above
      proxy_pass http://unicorn_mail_service;
    }
