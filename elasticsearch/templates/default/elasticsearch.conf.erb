# ElasticSearch Service
 
description     "ElasticSearch"
 
start on (net-device-up
          and local-filesystems
          and runlevel [2345])
 
stop on runlevel [016]
 
respawn limit 10 5
 
env ES_HOME=<%= node[:elasticsearch][:install_dir] %>
env ES_MIN_MEM=128m #<%= node.elasticsearch[:allocated_memory] %>
env ES_MAX_MEM=128m #<%= node.elasticsearch[:allocated_memory] %>
env DAEMON="${ES_HOME}/bin/elasticsearch"
env DATA_DIR="${ES_HOME}/data"
env CONFIG_DIR="${ES_HOME}/config"
env LOG_DIR="<%= node[:elasticsearch][:log_dir] %>"
env PID_FILE="<%= node[:elasticsearch][:pid_file] %>"
 
console output
 
exec su <%= node[:elasticsearch][:user] %> -c "$DAEMON -f -Des.path.conf=$CONFIG_DIR -Des.path.home=$ES_HOME -Des.path.logs=$LOG_DIR -Des.path.data=$DATA_DIR -p $PIDFILE"
