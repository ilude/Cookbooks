description "File Upload Site"

start on (local-filesystems and net-device-up IFACE=eth0)
stop on shutdown

respawn
respawn limit 3 15
console none


setuid <%= node[:unicorn][:user] %>
setgid <%= node[:unicorn][:group] %>
chdir <%= node[:unicorn][:apps_dir] %>/uploader.app

exec /usr/local/bin/unicorn_rails -c <%= node[:unicorn][:apps_dir] %>/uploader.app/unicorn.rb -E production 
